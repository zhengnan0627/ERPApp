
.container {
	width: 100vw;
}
.order-header {
	width: 100vw;
	height: 820rpx;
	position: relative;
	border-bottom: 16rpx solid #EEEEEE;
	/* background-color: #0086B3; */
}
.header-top {
	width: 100vw;
	height: 500rpx;
	line-height: 500rpx;
	background-color: #4CD964;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.top-item{
	width: 50vw;
	height: 240rpx;
	line-height: 240rpx;
	text-align: center;
}
.top-item1 {
	border-right: 10rpx solid #FFFDEF;
}
.footer-title {
	width: 100vw;
	height: 100rpx;
	font-size: 40rpx;
	line-height: 100rpx;
	background-color: #EEEEEE;
}
.select-tag {
	width: 100vw;
	height: 80rpx;
	margin-top: 14rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	/* background-color: #FFFDEF; */
}
.select-tag .tag-item {
	width: 23vw;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	margin-right: 50rpx;
	color: #FFFFFF;
}
.scroll-item {
	width: 100vw;
	padding-left: 20rpx;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #EEEEEE;
}
.scroll-item .scroll-title {
	font-size: 30rpx;
	color: #4CD964;
}
.scroll-item .scroll-store {
	font-size: 40rpx;
	font-weight: 500;
	color: #000000;
}
.scroll-item .scroll-person {
	font-size: 30rpx;
}

