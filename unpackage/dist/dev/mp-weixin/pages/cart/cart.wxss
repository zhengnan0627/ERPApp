
.container {
	width: 100vw;
	height: 100vh;
	background-color: #EEEEEE;
}
.scroll-view {
	height: 1040rpx;
}
.scroll-content {
	width: 100vw;
	height: 360rpx;
	background-color: #FFFFFF;
	border-top: 16rpx solid #EEEEEE;
}
.scroll-content .content-title {
	padding:14rpx;
	font-size: 44rpx;
	font-weight: 500;
	border-bottom: 2px solid #EEEEEE;
}
.content-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100vw;
	height: 20vh;
	line-height: 60rpx;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	/* background-color: #222222; */
}
.content-img {
	width: 30vw;
	height: 15vh;
}
.content-img image {
	width: 100%;
	height: 100%;
}
.content-word {
	font-size: 30rpx;
}
.content-word .word2 {
	color: #a6a6a6;
}
.content-word .word3 {
	color: #ff0800;
}
.footer {
	width: 100vw;
	position: fixed;
	



	bottom: 100rpx;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1px solid #EEEEEE;
	background-color: #FFFFFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient:horizontal;
	-webkit-box-direction:reverse;
	-webkit-flex-direction:row-reverse;
	        flex-direction:row-reverse;
}
.footer-icon {
	width: 20vw;
	height: 100%;
	background-color: #ff0000;
	color: #FFFFFF;
	text-align: center;
}
.footer-title {
	width: 40vw;
	height: 100%;
	font-size: 36rpx;
}
.footer-l{
	color: #ff0000;
}

