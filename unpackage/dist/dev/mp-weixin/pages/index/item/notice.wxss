
.container {
	width: 100vw;
	height: 100vh;
	background-color: #EEEEEE;
}
.item-container {
	width: 100vw;
	height: 80px;
	margin-top: 8px;
	padding-left: 8px;
	background-color: #FFFFFF;
}
.item-title {
	width: 100vw;
	height: 50px;
	line-height: 50px;
	font-size: 22px;
	font-weight: 500;
}
.item-content {
	width: 100vw;
	height: 27px;
	line-height: 27px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 17px;
	color: #888888;
}
.list-item {
	margin-left: 9px;
}

